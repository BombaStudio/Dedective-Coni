<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/src/style.css">

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <title>Document</title>
</head>
<body>
    <div id="messages">

    </div>

    <div class="footer">
        <div class="row justify-content-md-center">
            <div class="mb-3 mt-3 col-md-auto">
                <input type="text" class="form-control col" id="msg" placeholder="Enter your question" name="email">
            </div>
            <div class="mb-3 mt-3 col-md-auto">
                <button id="subMSG" class="btn btn-primary col">Submit</button>
            </div>
        </div>
    </div>
    <script>
        let subMSG = document.getElementById("subMSG");
        subMSG.onclick = function () {
            let msg = document.getElementById("msg");
            fetch("http://localhost:8080/rooms/{{ . }}/add_message/client/"+msg.value)
                    .then(function(response) { return response.json(); })
                        .then(function(json) {
                            console.log(json);
                            msg.value = "";
                        }
                )
        }
        setInterval(
            function () {
                fetch("http://localhost:8080/rooms/{{ . }}/messages")
                    .then(function(response) { return response.json(); })
                        .then(function(json) {
                            console.log(json);
                            messages.innerHTML = "";
                            json.forEach(element => {
                                let messages = document.getElementById("messages");
                                messages.innerHTML += '<div class="container"><span class="badge bg-secondary">'+element.clientID+'</span>'+element.message+'</div>';
                            });
                        }
                )
            },
        1000);
        
    </script>
</body>
</html>